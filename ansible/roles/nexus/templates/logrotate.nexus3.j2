# Help get rid of old logs from Nexus 3
# https://help.sonatype.com/repomanager3/installation-and-upgrades/directories
# Tested with: /usr/sbin/logrotate --debug /etc/logrotate.d/nexus3
{{ nexus_data_dir }}/sonatype-work/nexus3/log/* {
    notifempty
    missingok
    copytruncate
    count 1
}

{{ nexus_data_dir }}/sonatype-work/nexus3/log/tasks/* {
    notifempty
    missingok
    copytruncate
    count 1
}